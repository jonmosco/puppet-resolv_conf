# resolv.conf: Managed by puppet.
#
<% if @domain -%>
domain <%= @domain %>
<% end -%>
<% if @search -%>
search <%= @search %>
<% end -%>
<% if !@sortlist.empty? -%>
sortlist <%= @sortlist.join(' ') %>
<% end -%>
<% if @options -%>
options <%= @options %>
<% end -%>
<% @_nameserver.each do |ns| -%>
nameserver <%= ns %>
<% end -%>
