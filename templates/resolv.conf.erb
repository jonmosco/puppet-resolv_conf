# resolv.conf: Managed by puppet.
#
<% if @domain -%>
domain <%= @domain %>
<% end -%>
<% if @_search.is_a? Array -%>
search <%= @_search.join(' ') %>
<% elsif ! @_search.nil? -%>
search <%= @_search %>
<% end -%>
<% if !@sortlist.empty? -%>
sortlist <%= @sortlist.join(' ') %>
<% end -%>
<% if @options -%>
options <%= @options %>
<% end -%>
<% @_nameserver.each do |ns| -%>
nameserver <%= ns %>
<% end -%>
